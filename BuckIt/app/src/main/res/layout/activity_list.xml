<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/marginX"
            android:layout_marginVertical="@dimen/marginY"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <!-- List name -->
            <TextView
                android:id="@+id/listName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_horizontal"
                android:text="My List"
                android:textColor="@color/textPrimary"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <!-- Privacy and Collaborators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="@dimen/marginY"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:paddingHorizontal="10dp"
                android:background="@color/popupBackground"
                android:orientation="horizontal">

                <!-- Visibility -->
                <ImageButton
                    android:id="@+id/changePrivacy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="null"
                    android:layout_gravity="center_vertical|left"
                    app:srcCompat="@drawable/private_eye" />

                <!-- Add collaborators button -->
                <LinearLayout
                    android:id="@+id/addCollaborator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/collaborator" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/add_in_circle" />
                </LinearLayout>
            </LinearLayout>

            <!-- The actual bucket list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="@dimen/marginY"
                android:background="@color/popupBackground"
                android:orientation="vertical">

                <!-- The + button to add a new item -->
                <ImageButton
                    android:id="@+id/addItem"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="10dp"
                    android:background="null"
                    app:srcCompat="@drawable/add" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/marginY"
                android:text="Photos"
                android:textColor="@color/textSecondary"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <!-- Nested layout so photos take up more space -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=""
                android:orientation="vertical">

                <!-- Non-deprecated version of GridLayout
                Programmatically, add to last TableRow until 3 children,
                then make a new one -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0">

                    <!-- Where the first 3 images will go -->
                    <!-- Make sure to set all these settings when programmatically adding a row -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/popupBackground"
                        android:gravity="center_vertical"
                        android:padding="5dp">

                        <!-- Make sure to set all these settings when programmatically adding a photo -->
                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/addPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/marginY"
                    android:text="Add a Photo" />

            </LinearLayout>

            <!-- Button to add a photo -->

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/ridasDark"
                android:padding="20dp"
                android:progress="25"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>