<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/marginX"
            android:layout_marginVertical="@dimen/marginY"
            android:layout_gravity="top"
            android:orientation="vertical" >

            <!-- List name -->
            <TextView
                android:id="@+id/listName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_horizontal"
                android:text="This List"
                android:textColor="@color/textPrimary"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <!-- Privacy and Collaborators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="@dimen/marginY"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:paddingHorizontal="10dp"
                android:background="@color/popupBackground"
                android:orientation="horizontal">

                <!-- Visibility -->
                <ImageButton
                    android:id="@+id/changePrivacy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:layout_gravity="center_vertical|left"
                    app:srcCompat="@drawable/private_eye" />

                <!-- Add collaborators button -->
                <LinearLayout
                    android:id="@+id/addCollaborator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/collaborator" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/add_in_circle" />
                </LinearLayout>
            </LinearLayout>


            <!-- List container -->
            <LinearLayout
                android:id="@+id/goalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/marginY"
                android:layout_marginHorizontal="@dimen/marginX">
            </LinearLayout>

            <!-- Button layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_weight="0">

                <!-- Delete button -->
                <!-- TODO: Clicking on this should enter a mode where you can delete buckets -->
                <ImageButton
                    android:id="@+id/deleteGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/trash" />

                <!-- Add a new bucket -->
                <!-- TODO: Clicking on this should add a new bucket -->
                <ImageButton
                    android:id="@+id/addGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/marginY"
                android:text="Photos"
                android:textColor="@color/textSecondary"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <!-- Nested layout so photos take up more space -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--
                Programmatically, add to last Row until 3 children,
                then make a new one -->
                <TableLayout
                    android:id="@+id/mylistgallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TableLayout>

                <Button
                    android:id="@+id/addPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/marginY"
                    android:text="Add a Photo" />

            </LinearLayout>

            <!-- Button to add a photo -->

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/ridasDark"
                android:padding="20dp"
                android:progress="25"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>