<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/marginX"
            android:layout_marginVertical="@dimen/marginY"
            android:layout_gravity="top
"
            android:orientation="vertical" >

            <!-- List name -->
            <TextView
                android:id="@+id/listName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_horizontal"
                android:text="INDIA"
                android:textColor="@color/textPrimary"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <!-- The actual bucket list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="@dimen/marginY"
                android:orientation="vertical">
                <!-- android:background="@color/popupBackground"-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Looks like this bucket has no lists yet"
                    android:textSize="15sp"
                    android:layout_marginBottom="@dimen/marginY"
                    android:textColor="@color/textSecondary" />

                <Button
                    android:id="@+id/addinspolist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add List"
                    android:paddingHorizontal="30dp"
                    android:background="@drawable/round_normal_button"/>

                <!-- The + button to add a new item
                <ImageButton
                    android:id="@+id/addList"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal|bottom"
                    android:padding="10dp"
                    android:background="@null"
                    app:srcCompat="@drawable/add" />-->
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>