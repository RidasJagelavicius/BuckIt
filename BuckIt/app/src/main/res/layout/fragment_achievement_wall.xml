<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.achievementWall.AchievementWallFragment">


    <ScrollView
        android:id="@+id/uh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal"
            android:text="ACHIEVEMENTS"
            android:layout_marginTop="@dimen/marginY"
            android:textColor="@color/textPrimary"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/achievementContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        </LinearLayout>

        <!--        spain list wall-->
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_normal_outline_button"
            android:padding="10dp">

            <TextView
                android:id="@+id/listName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="SPAIN"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/listName"
                android:layout_marginLeft="25dp"
                android:src="@drawable/spain2" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/listName"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@+id/img1"
                android:src="@drawable/spain3" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/spain4" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img2"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img1"
                android:src="@drawable/spain1" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img4"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:text="Completed Jan 5, 2019"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

<!--        cooking list wall-->
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="340dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_normal_outline_button"

            android:padding="10dp">

            <TextView
                android:id="@+id/listName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:text="Cooking"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img12"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/listName2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/lemonricottacake" />

            <ImageView
                android:id="@+id/img22"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/listName2"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/img12"
                android:src="@drawable/shrimpfryrye" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img12"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hhehe" />

            <ImageView
                android:id="@+id/img42"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@id/img22"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img12"
                android:src="@drawable/pastaaa" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img42"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:text="Completed Nov 23, 2020"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>



    </LinearLayout>


