<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="75dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:background="@color/superLightPurple"
        android:orientation="vertical">

    <TextView
    android:id="@+id/advice_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="13dp"
    android:textColor="@color/textPrimary"
    android:layout_gravity="center"
    android:textStyle="bold"
    android:textSize="@dimen/textPrimary"
    android:text="NEW ADVICE" />

    <EditText
        android:id="@+id/edit_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Share some knowledge..."
        android:textSize="15sp"
        android:inputType="text"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary">
        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/submit_advice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="50dp"
        android:background="@drawable/round_normal_button"
        android:textColor="@color/textPrimary"
        android:text="Post Advice"
        android:onClick="onClick"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>