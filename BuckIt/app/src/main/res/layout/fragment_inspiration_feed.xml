<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inspirationFeed.InspirationFeedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/friend_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Friend Activity"
            android:textSize="@dimen/textPrimary"
            android:layout_marginVertical="10dp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Swipe for more"
            android:textSize="15sp"
            android:layout_marginVertical="0dp"
            android:textColor="@color/textSecondary" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="TRENDING"
            android:textSize="35sp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:id="@+id/trending"/>

        <Button
            android:id="@+id/travel_button"
            android:layout_below="@id/trending"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/round_normal_outline_button"
            android:gravity="center"
            android:text="TRAVEL"/>

        <Button
            android:id="@+id/cooking_button"
            android:layout_below="@id/travel_button"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/round_normal_outline_button"
            android:gravity="center"
            android:text="Cooking" />

        <Button
            android:id="@+id/kindness_button"
            android:layout_below="@id/cooking_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_normal_outline_button"
            android:gravity="center"
            android:text="Kindness" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>