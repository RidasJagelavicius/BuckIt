<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inspirationFeed.InspirationFeedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="150dp"
            android:id="@+id/travel_button"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Travel"
            android:layout_centerHorizontal="true"
            >
        </Button>

        <Button
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/cooking_button"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Cooking"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/travel_button"
            >
        </Button>

        <Button
            android:layout_margin="15dp"
            android:id="@+id/kindness_button"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Kindness"
            android:layout_centerInParent="true"
            android:layout_below="@id/cooking_button"
            >
        </Button>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_marginTop="100dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>