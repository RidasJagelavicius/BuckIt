<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/marginX"
        android:layout_marginVertical="@dimen/marginY"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- Buttons for the different lists within travel category bucket-->
        <Button
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/travel1_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Florida"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_normal_outline_button" />

        <Button
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/travel2_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="India"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/travel1_list"
            android:background="@drawable/round_normal_outline_button"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>