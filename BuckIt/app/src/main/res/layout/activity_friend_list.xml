<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="115dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/marginX"
            android:layout_marginVertical="@dimen/marginY"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <!-- Friend's list name -->
            <TextView
                android:id="@+id/listName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:text="my_good_friend 's List"
                android:textColor="@color/textPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Privacy and Collaborators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@color/popupBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp">

                <!-- Visibility -->
                <ImageButton
                    android:id="@+id/changePrivacy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/public_eye" />

                <!-- Add collaborators button -->
                <LinearLayout
                    android:id="@+id/addCollaborator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/collaborator" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/add_in_circle" />
                </LinearLayout>

            </LinearLayout>

<!--            Name of List-->
            <TextView
                android:id="@+id/uh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:text="Cooking"
                android:textColor="@color/textPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- The actual bucket list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:orientation="vertical">

<!--                arrow and goal in horizontal layout-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dropdownarrow" />

                    <TextView
                        android:id="@+id/firsttask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0"
                        android:text="Baking"
                        android:textColor="@color/textPrimary"
                        android:textSize="17sp" />

                </LinearLayout>

<!--                green bullet point and goal in horizontal layout-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/green" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="0"
                        android:textColor="@color/textPrimary"
                        android:textSize="17sp"
                        android:text="@string/lemonricottacrossed"/>

                </LinearLayout>

<!--                red bullet point and goal in horizontal layout-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/red" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="0"
                        android:text="Tres Leches Cake"
                        android:textColor="@color/textPrimary"
                        android:textSize="17sp" />

                </LinearLayout>

<!--                drop down arrow and goal in horizontal layout-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dropdownarrow" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0"
                        android:text="30 min dinner"
                        android:textColor="@color/textPrimary"
                        android:textSize="17sp" />

                </LinearLayout>

<!--                green bullet point and goal in horizontal layout-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/green" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="0"
                        android:text="@string/friedricecrossed"
                        android:textColor="@color/textPrimary"
                        android:textSize="17sp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="Photos"
                android:textColor="@color/textSecondary"
                android:textSize="25sp"
                android:textStyle="bold" />
            <!--            use backkground shadow to signify photos will be here-->

            <!-- Nested layout so photos take up more space -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--
                Programmatically, add to last Row until 3 children,
                then make a new one -->
                <TableLayout
                    android:id="@+id/mylistgallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/popupBackground"
                    android:padding="5dp">

<!--                    first row in table-->
                    <TableRow
                        android:id="@+id/firstRow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/lemonricottacake" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/shrimpfryrye" />
                    </TableRow>
                </TableLayout>

                \


            </LinearLayout>

            <!-- Button to add a photo -->

            <!--                not sure if this liner layout inside is necessary-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">


                <!--            Button to post advice-->
                <Button
                    android:id="@+id/post_advice_button"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:onClick="onClick"
                    android:text="Give Advice"
                    android:background="@drawable/round_normal_button"
                    />

<!--                                <EditText-->
<!--                                    android:id="@+id/advice_input"-->
<!--                                    android:layout_width="match_parent"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    >-->
<!--                                </EditText>-->
            </LinearLayout>


            <!--            Button to post advice-->

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@color/ridasDark"
                android:padding="20dp"
                android:progress="25" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>