<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="75dp"
        android:layout_marginTop="50dp"
        android:background="@color/superLightPurple"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NEW LIST"
            android:textSize="@dimen/textPrimary"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popupListName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_input_box"
                android:backgroundTint="@color/textPrimary"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/popupCreateList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="50dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_normal_button"
            android:textColor="@color/textPrimary"
            android:text="Create" />
    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>