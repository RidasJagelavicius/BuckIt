<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/superLightPurple"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"

                    >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/tenor" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/username4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cardView"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    android:text="\@\my_good_friend"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/friend_request_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username4"
                    android:layout_toRightOf="@+id/cardView"
                    android:layout_marginLeft="25dp"
                    android:text="FRIENDS"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/round_normal_button"
                    android:drawableLeft="@drawable/followed_icon"/>



            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:id="@+id/cooking_button"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/round_normal_outline_button"
                        android:gravity="center"
                        android:text="COOKING"/>
<!--                    <ImageView-->
<!--                        android:layout_width="20dp"-->
<!--                        android:layout_height="20dp"-->
<!--                        android:src="@drawable/padlock"-->
<!--                        android:layout_marginLeft="335dp"-->
<!--                        android:layout_marginTop="80dp"-->
<!--                        android:elevation="2dp" />-->

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/travel_button"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_normal_outline_button"
                    android:gravity="center"
                    android:text="TRAVEL"/>

<!--                <ImageView-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:src="@drawable/padlock"-->
<!--                    android:layout_marginLeft="335dp"-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:elevation="2dp" />-->

            </RelativeLayout>





        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



